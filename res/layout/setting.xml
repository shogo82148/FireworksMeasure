<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">

    <Button
        android:id="@+id/buttonSetPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonSetPlace" />

    <CheckBox
        android:id="@+id/checkAutoDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkAutoDetect" />

    <TextView
        android:id="@+id/textDetectRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textDetectRange" />

    <SeekBar
        android:id="@+id/seekBarDetectRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textCameraThreshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textCameraThreshold" />

    <SeekBar
        android:id="@+id/seekBarCameraThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
